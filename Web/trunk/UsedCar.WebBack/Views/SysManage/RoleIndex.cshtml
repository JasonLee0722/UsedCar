@model IEnumerable<Role>

@{
    ViewBag.Title = "系统权限管理";
    ViewBag.SubTitle = "设置角色权限功能";
    ViewBag.ParentTitle = "系统管理";
    int iItem = 1; //ViewBag.NumberStart;
}

@section Styles{
    @Styles.Render("~/Content/ColorBox/css1")
    <style type="text/css">
    </style>
}

@section Scripts{
    @Scripts.Render("~/bundles/ColorBox")
    <script src="~/Scripts/UserJS/TableManage.js"></script>
    <script type="text/javascript">
        $(function () {
            TableManage.init();
        });
    </script>
}

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th width="50">
            序号
        </th>
        <th>
            角色名称
        </th>
        <th>
            角色级别
        </th>
        <th>
            角色备注
        </th>
        <th>
            添加时间
        </th>
        <th>
            @if (Html.HasAction("添加【系统权限管理】"))
            {
                <a href="#" onclick="TableManage.Edit('/SysManage/RoleEdit', 400, 400)">添加</a>
            }
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@(iItem++)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.RoleLevel)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddTime)
            </td>
            <td>
                @if (Html.HasAction("修改【系统权限管理】"))
                {
                    <a href="#" onclick="TableManage.Edit('/SysManage/RoleEdit/@item.ID',400,400)" class="btn btn-primary btn-xs">编辑</a>
                }
                @if (Html.HasAction("删除【系统权限管理】"))
                {
                    <a href="#" onclick="TableManage.Delete('/SysManage/RoleDelete/@item.ID')" class="btn btn-primary btn-xs">删除</a>
                }
                @if (Html.HasAction("权限管理【系统权限管理】"))
                {
                    <a href="#" onclick="TableManage.Edit('/SysManage/RoleAction/@item.ID',560,395)" class="btn btn-primary btn-xs">权限管理</a>
                }
            </td>
        </tr>
    }

</table>
