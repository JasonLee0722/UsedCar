<script type="text/javascript">
    function ColorBoxPop(url) {
        $.colorbox({ href: url, iframe: true, width: "80%", height: "80%" });
    }

    function CloseColorBox() {
        $.colorbox.close();
    }


    function AjaxDelete(_url) {
        if (confirm("确认要删除此条记录？")) {
            $.ajax({
                url: _url,
                cache: false,
                crossDomain: true
            }).done(function (data) {
                alert(data);
            });
        }
    }
</script>